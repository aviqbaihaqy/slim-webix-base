<div class="sidebar">
    <nav class="sidebar-nav">
        <ul class="nav">

          {% block sidebar_menu %}
            <li class="nav-item">
                <a class="nav-link {{ (currentRoute =='/dashboard')? 'active':'' }}" href="{{ path_for('dashboard') }}">
                    <i class="icon-speedometer"></i>
                    Dashboard</a>
            </li>

            <li class="nav-title">
                Administrator
            </li>
            <li class="nav-item">
                <a class="nav-link {{ (currentRoute =='/dashboard/surat/masuk')? 'active':'' }}" href="{{ path_for('surat-masuk')}}">
                    <i class="icon-user-follow"></i>
                    Surat Masuk</a>
            </li>

            {% endblock %}
        </ul>
    </nav>
    <div class="sidebar-button">

      {% block sidebar_button %}
        <a class="nav-link nav-link-success" href="{{ path_for( profile_url ) }}">
            <i class="icon-user"></i>
            My Account</a>
        <a class="nav-link nav-link-danger" href="{{ path_for('logout') }}">
            <i class="icon-logout"></i>
            <strong>Logout</strong></a>
      {% endblock %}
    </div>
    <button class="sidebar-minimizer brand-minimizer" type="button"></button>
</div>
